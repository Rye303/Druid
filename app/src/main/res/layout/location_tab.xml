<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/LocationLabel"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/LocationText"
        android:layout_toEndOf="@+id/LocationText"
        android:text="A" />

    <TextView
        android:text="Current Location: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/LocationText"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/LocationText"
        android:id="@+id/Background" />

    <TextView
        android:text="look at me"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/locationText"
        android:maxLines = "10"
        android:scrollbars = "vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Sword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/swordbutton"
        android:layout_above="@+id/locationText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Health"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/potionbutton"
        android:layout_above="@+id/locationText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Staff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/staffbutton"
        android:layout_above="@+id/locationText"
        android:layout_centerHorizontal="true" />


</RelativeLayout>